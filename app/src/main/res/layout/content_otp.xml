<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".OtpVerificationActivity">


    <TextView
        android:id="@+id/com_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient_color"
        android:fontFamily="@font/dosis_extrabold"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dosis_extrabold"
        android:gravity="center"
        android:text=""
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@id/com_name" />

    <Button
        android:id="@+id/btn_final_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="done"
        android:background="@drawable/edit_otp_bg"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/edit_otp_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edit_upload_bg"
            android:fontFamily="@font/dosis_semibold"
            />

        <EditText
            android:id="@+id/edit_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/edit_1"
            android:background="@drawable/edit_otp_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/dosis_semibold"
            android:textCursorDrawable="@drawable/edit_upload_bg"
            />

        <EditText
            android:id="@+id/edit_3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/edit_2"
            android:background="@drawable/edit_otp_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/dosis_semibold"
            android:textCursorDrawable="@drawable/edit_upload_bg"
            />

        <EditText
            android:id="@+id/edit_4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/edit_3"
            android:background="@drawable/edit_otp_bg"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/dosis_semibold"
            android:textCursorDrawable="@drawable/edit_upload_bg"
            />

        <EditText
            android:id="@+id/edit_5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/edit_4"
            android:background="@drawable/edit_otp_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/dosis_semibold"
            android:textCursorDrawable="@drawable/edit_upload_bg"
            />

        <EditText
            android:id="@+id/edit_6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/edit_5"
            android:background="@drawable/edit_otp_bg"
            android:gravity="center"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/dosis_semibold"
            android:textCursorDrawable="@drawable/edit_upload_bg"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter verification code"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/dosis_semibold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>