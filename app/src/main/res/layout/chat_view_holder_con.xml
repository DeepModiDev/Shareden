<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/left_chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fgkgmkgmfk"
        android:gravity="left"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="#000"
        android:textSize="16sp"
        android:background="@drawable/left_bubble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/right_chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="kmfnbdjnbgdjbgn"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="#000"
        android:textSize="16sp"
        android:background="@drawable/right_bubble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_chat_bubble" />
</androidx.constraintlayout.widget.ConstraintLayout>