<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/id_chat_userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="10dp"
            app:riv_border_width="0dp"
            app:riv_border_color="@android:color/transparent"
            />

        <TextView
            android:id="@+id/id_chat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/dosis_semibold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Deep Modi"
            android:textColor="#000"
            android:textSize="16sp"
            android:maxWidth="300dp"
            app:layout_constraintStart_toEndOf="@+id/id_chat_userImage"
            app:layout_constraintTop_toTopOf="@+id/id_chat_userImage" />

        <TextView
            android:id="@+id/id_chat_userlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="300dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="userLevel"
            app:layout_constraintBottom_toBottomOf="@+id/id_chat_userImage"
            app:layout_constraintStart_toEndOf="@+id/id_chat_userImage"
            app:layout_constraintTop_toBottomOf="@+id/id_chat_username" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>